<UserControl x:Class="PalCalc.UI.View.Utils.IntegerTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PalCalc.UI.View.Utils"
             Cursor="IBeam"
             MinWidth="20"
             mc:Ignorable="d">
    <TextBox
        x:Name="textBox"
        TextChanged="textBox_TextChanged"
        KeyDown="textBox_KeyDown"
        PreviewKeyDown="textBox_PreviewKeyDown"
        VerticalContentAlignment="Center"
        HorizontalContentAlignment="Right"
        PreviewMouseDown="textBox_PreviewMouseDown"
        PreviewMouseWheel="textBox_PreviewMouseWheel"
        Padding="5,3"
        IsEnabled="{Binding RelativeSource={RelativeSource AncestorType=local:IntegerTextBox}, Path=IsEnabled}"
        />
</UserControl>
