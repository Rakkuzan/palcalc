<UserControl x:Class="PalCalc.UI.View.Main.GameSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PalCalc.UI.View"
             xmlns:vu="clr-namespace:PalCalc.UI.View.Utils"
             xmlns:mvm="clr-namespace:PalCalc.UI.ViewModel.Mapped"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:itl="clr-namespace:PalCalc.UI.Localization"
             xmlns:c="clr-namespace:PalCalc.UI.ViewModel.Converters"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:Background="White"
             d:DataContext="{d:DesignInstance mvm:GameSettingsViewModel, IsDesignTimeCreatable=True}"
             d:DesignWidth="622.784">
    <UserControl.Resources>
        <c:ValueVisibilityConverter x:Key="VVC" />
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="{itl:LocalizedText LC_BREEDING_TIME}" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <vu:IntegerTextBox
                Grid.Column="2"
                ToolTipService.ToolTip="{itl:LocalizedText LC_BREEDING_TIME_DESC}"
                ToolTipService.ShowOnDisabled="True"
                Value="{Binding BreedingTimeSeconds}"
                MinValue="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="0,4,0,0"
            />

            <Label Grid.Column="0" Content="{itl:LocalizedText LC_MULTIPLE_BREEDING_FARMS}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,26,0,0" />
            <CheckBox
                Grid.Column="2"
                ToolTipService.ToolTip="{itl:LocalizedText LC_MULTIPLE_BREEDING_FARMS_DESC}"
                ToolTipService.ShowOnDisabled="True"
                IsChecked="{Binding MultipleBreedingFarms}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="0,31,0,0"
            />

            <!-- TODO ITL -->
            <!-- TODO - Tooltip -->
            <Label Grid.Column="0" Content="Palbox Tab Size" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,52,0,0"/>
            <StackPanel Margin="0,56,0,0" Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Top">
                <vu:IntegerTextBox VerticalAlignment="Top" MinValue="1" MaxValue="100" MinWidth="26" Value="{Binding PalboxTabWidth}" />
                <TextBlock Margin="3,0,3,0">x</TextBlock>
                <vu:IntegerTextBox VerticalAlignment="Top" MinValue="1" MaxValue="100" MinWidth="26" Value="{Binding PalboxTabHeight}" />
            </StackPanel>
        </Grid>

        <Label Visibility="{Binding AppRestartRequired, Converter={StaticResource VVC}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <materialIcons:MaterialIcon Grid.Column="0" Kind="Warning" Foreground="Orange" Height="18" VerticalAlignment="Top" />
                <TextBlock Grid.Column="1" Margin="5,0,0,0" VerticalAlignment="Center" TextWrapping="WrapWithOverflow">
                        Some changes require a restart to take full effect.
                </TextBlock>
            </Grid>
        </Label>
    </StackPanel>
</UserControl>
