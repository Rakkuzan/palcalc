<Page x:Class="PalCalc.UI.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:itl="clr-namespace:PalCalc.UI.Localization" 
      xmlns:local="clr-namespace:PalCalc.UI"
      d:Background="White"
      mc:Ignorable="d" 
      d:Width="400" d:Height="200"
      Cursor="Wait"
      Title="LoadingPage">

    <StackPanel VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" FontSize="20" Text="{itl:LocalizedText Code=LC_STARTUP_LOADING}" />
    </StackPanel>
</Page>
